{
    "name": "resource-handler",
    "version": "2.2.0",
    "description": "Thin wrapper around async resource",
    "main": "lib/index.js",
    "scripts": {
        "gh-pages": "git subtree push --prefix docs origin gh-pages",
        "doc": "rimraf docs && typedoc --entryPoints src/index.ts --excludeProtected --excludePrivate --out docs && touch docs/.nojekyll",
        "fmt": "pretty-quick",
        "clean": "rimraf lib",
        "lint": "eslint src --ext .ts",
        "test": "cross-env NODE_ENV=test nyc mocha $NODE_OPTS",
        "build": "cross-env NODE_ENV=production npm run lint && npm run clean && tsc -b tsconfig.json",
        "prepublish": "npm run test && npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ziflex/resource-handler.git"
    },
    "author": "Tim Voronov",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ziflex/resource-handler/issues"
    },
    "keywords": [
        "async",
        "await",
        "connection",
        "wrapper",
        "handler",
        "auto",
        "reconnect"
    ],
    "homepage": "https://github.com/ziflex/resource-handler#readme",
    "dependencies": {
        "p-retry": "^4.6.1"
    },
    "devDependencies": {
        "@types/chai": "^4.2.22",
        "@types/chai-as-promised": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.9.4",
        "@types/sinon": "^10.0.3",
        "@typescript-eslint/eslint-plugin": "^4.31.2",
        "@typescript-eslint/parser": "^4.31.2",
        "chai": "^4.3.4",
        "chai-as-promised": "^7.1.1",
        "cross-env": "^7.0.3",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-prettier": "^4.0.0",
        "mocha": "^9.1.1",
        "mocha-lcov-reporter": "^1.3.0",
        "nyc": "^15.1.0",
        "prettier": "^2.4.1",
        "pretty-quick": "^3.1.1",
        "rimraf": "^3.0.2",
        "sinon": "^11.1.2",
        "source-map-support": "^0.5.20",
        "ts-node": "^10.2.1",
        "typedoc": "^0.22.4",
        "typescript": "^4.4.3"
    }
}
